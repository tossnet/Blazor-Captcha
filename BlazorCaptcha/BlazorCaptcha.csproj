<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<Copyright>Copyright 2020-2023</Copyright>
		<PackageProjectUrl>https://github.com/tossnet/Blazor-Captcha</PackageProjectUrl>
		<RepositoryUrl>https://github.com/tossnet/Blazor-Captcha</RepositoryUrl>
		<PackageTags>Blazor, captcha</PackageTags>
		<Authors>Christophe Peugnet</Authors>
		<Company>Christophe Peugnet</Company>
		<Description>Generates a captcha image for a Blazor Server or WebAssembly application</Description>
		<PackageReleaseNotes>To avoid any confusion, remove 'x', 'V', 'v' chars</PackageReleaseNotes>
		<PackageIcon>icon.png</PackageIcon>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>1.4.1</Version>
		<AssemblyVersion>1.2.0.1</AssemblyVersion>
		<FileVersion>1.2.0.1</FileVersion>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<Licence>GPL-3.0</Licence>
		<DebugType>embedded</DebugType>
		<PackageReadmeFile>README.md</PackageReadmeFile>

		<GenerateDocumentationFile>True</GenerateDocumentationFile>
	</PropertyGroup>

	<PropertyGroup>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

  <ItemGroup>
	<None Include="..\README.md">
	  <Pack>True</Pack>
	  <PackagePath>\</PackagePath>
	</None>
	<None Include="LICENSE.txt">
		<Pack>True</Pack>
		<PackagePath></PackagePath>
	</None>
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="7.0.14" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.2" />
    <PackageReference Include="SkiaSharp" Version="2.88.6" />
    <PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="2.88.3" />
    <PackageReference Include="SkiaSharp.NativeAssets.WebAssembly" Version="2.88.3" />
  </ItemGroup>


  <ItemGroup>
    <Resource Include="wwwroot\refresh.svg" />
  </ItemGroup>

</Project>
